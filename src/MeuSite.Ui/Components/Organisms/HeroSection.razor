@inject ResumePageViewModel ViewModel

<section class="hero-section">
    <div class="hero-top">
        <ProfilePhoto Src="@ViewModel.ProfileImage" Alt="@ViewModel.DisplayName" />
        <div class="hero-identity">
            <h1 class="hero-name">@ViewModel.DisplayName</h1>
            <p class="hero-title">@ViewModel.DisplayTitle</p>
            <a href="_content/MeuSite.Ui/docs/curriculo-persike.pdf" download class="btn-download">
                <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
                    <polyline points="7 10 12 15 17 10"/>
                    <line x1="12" y1="15" x2="12" y2="3"/>
                </svg>
                Baixar CV
            </a>
        </div>
        <DecorativeDots Rows="5" Columns="4" />
    </div>
    <div class="hero-about-block">
        <h3 class="hero-about-label">Sobre mim</h3>
        <p class="hero-about">@ViewModel.AboutText</p>
    </div>
</section>
